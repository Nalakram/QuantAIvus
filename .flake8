[flake8]
# Allow up to 120 characters per line
max-line-length = 120

# Ignore specific error codes
extend-ignore = E203, W503, W293, W291, E231

# E203: Whitespace before ':'
# W503: Line break before binary operator
# W293: Blank line contains whitespace (optional, consider auto-fixing instead)
# W291: Trailing whitespace (optional, consider auto-fixing instead)
# E231: Missing whitespace after comma (optional, for flexibility)

# Donâ€™t lint these directories
exclude =
    .git,
    __pycache__,
    srcPy/external/*,
    build,
    dist,
    tests/*,
    tmp/*

# Per-file ignores for specific problematic files
per-file-ignores =
    srcPy/data/data_cleaning.py:E302,E305,E301,E306
    srcPy/utils/config.py:E302,E305
    srcPy/data/data_loader.py:E302,E305,E301
    srcPy/data/ib_data_collection.py:E302,E305
    srcPy/data/preprocessor.py:E302
    srcPy/models/informer_model.py:E302
    srcPy/utils/exceptions.py:E302
    srcPy/utils/validators.py:E302

# Optional: Enable docstring checking (if using flake8-docstrings)
docstring-convention = google